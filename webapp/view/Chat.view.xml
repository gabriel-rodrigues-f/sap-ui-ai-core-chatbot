<mvc:View
    controllerName="com.lab2dev.uichatbotaigabrielmarangoni.controller.Chat"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.f"
>
            <m:Page
                id="Chat"
                showFooter="true"
                showHeader="false"
                floatingFooter="true"
                class="chatContainer"
            >
                <m:VBox id="initialRightScreenVBox">
                    <m:List
                        id="initialRightScreenVBoxList"
                        showSeparators="Inner"
                        noDataText="How can I help you?"
                        updateFinished=".onListUpdateFinished"
                        items="{chatModel>/messages/}"
                        busy="{chatModel>/isBusy}"
                    >
                        <m:FeedListItem
                            id="initialRightScreenListItem"
                            info="{chatModel>role}"
                            text="{chatModel>content}"
                            timestamp="{chatModel>timestamp}"
                            icon="{chatModel>initials}"
                            showIcon="true"
                        />
                    </m:List>
                </m:VBox>

                <m:footer>
                    <m:OverflowToolbar
                        id="officialRightScreenOverflowToolbar"
                        width="100%"
                        height="auto"
                    >
                        <m:FeedInput
                            id="officialFeedInput"
                            showIcon="false"
                            placeholder="Enter your question"
                            growing="true"
                            post=".onSendMessage"
                            enabled="{chatModel>/enableTextArea}"
                        />
                    </m:OverflowToolbar>
                </m:footer>
            </m:Page>
</mvc:View>
